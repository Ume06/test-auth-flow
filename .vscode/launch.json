  "version": "0.2.0",
  "configurations": [
    {
        "name": "Launch TypeScript",
        "type": "node",
        "request": "launch",
        "args": ["${workspaceFolder}\\src\\index.ts"],
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "--max-old-space-size=4096"],
        "sourceMaps": true,
        "cwd": "${workspaceRoot}",
        "env": { }
    },
    {
        "name": "Attach TypeScript (Cold Reload)",
        "type": "node",
        "request": "attach",
        "restart": true,
        "port": 5858,
        "outFiles": [],
        "sourceMaps": true,
        "env": {}
    },
  ]
}
